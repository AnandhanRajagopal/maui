<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Pages.RealtimeStatsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Title="Realtime Performance Stats">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="200"/>
    </Grid.RowDefinitions>
    <AbsoluteLayout>
      <Label x:Name="label1"
             Text="Bouncing text"
             FontSize="20"
             AbsoluteLayout.LayoutFlags="PositionProportional" />
      <Label x:Name="label2"
             Text="Bouncing text"
             FontSize="20"
             AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>    
    <CollectionView
      x:Name="RealtimeItems"
      Grid.Row="1"/>
  </Grid>
</ContentPage>
