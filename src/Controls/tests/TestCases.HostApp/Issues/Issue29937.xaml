<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue29937"
             Title="Issue29937">
    <VerticalStackLayout>
        <Label Text="Testing SelectedItem + ItemsSource null scenario" AutomationId="TestLabel" />
        <Button Text="Test Scenario" AutomationId="TestButton" Clicked="OnTestButtonClicked" />
        <CollectionView x:Name="collectionView"
                        SelectionMode="Single"
                        ItemsSource="{Binding Items}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="LightGray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding .}" 
                                   FontSize="18" 
                                   AutomationId="{Binding .}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label Text="No crash occurred!" AutomationId="SuccessLabel" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>