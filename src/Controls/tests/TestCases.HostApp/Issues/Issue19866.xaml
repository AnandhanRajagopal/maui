<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue19866"
             Title="Issue 19866 - iOS CollectionView ScrollsToTop">
    <StackLayout>
        <Label AutomationId="InstructionsLabel" 
               Text="To test: 1) Scroll down in the CollectionView below 2) Tap the iOS status bar 3) Verify the CollectionView scrolls to the top" 
               Padding="10" 
               BackgroundColor="LightYellow"
               FontSize="16" />
        
        <CollectionView x:Name="TestCollectionView" 
                        AutomationId="TestCollectionView"
                        ItemsSource="{Binding Items}"
                        BackgroundColor="LightGray"
                        HeightRequest="500">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" BackgroundColor="White" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="Blue" />
                        <Label Grid.Row="1" Text="{Binding Description}" FontSize="14" TextColor="Gray" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Label Text="Note: Scroll behavior only works on actual iOS devices, not simulators or other platforms."
               Padding="10"
               FontSize="12"
               TextColor="Red" />
    </StackLayout>
</ContentPage>